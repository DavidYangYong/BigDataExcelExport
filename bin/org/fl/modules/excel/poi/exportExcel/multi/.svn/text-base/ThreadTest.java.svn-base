public class ThreadTest implements Runnable {
	/**
	 * Logger for this class
	 */
	private static final Logger logger = Logger.getLogger(ThreadTest.class);

	private static CountDownLatch doneCdl;// 所有连接工作都结束的控制器
	private static CountDownLatch startCdl; // 用于启动所有连接线程的闸门'
	
	private int pageSize;
	
	private RowSelect rowSelect;
	private ISxssfWorkBookList sxssfWorkBookList;
	private SXSSFWorkBookUtil sxssfWorkBookUtil;
	
	public ThreadTest(CountDownLatch startCdl, CountDownLatch doneCdl,
	        SXSSFWorkBookUtil sxssfWorkBookUtil, RowSelect rowSelect,
	        ISxssfWorkBookList sxssfWorkBookList, int pageSize) {
		this.startCdl = startCdl;
		this.doneCdl = doneCdl;
		this.sxssfWorkBookUtil = sxssfWorkBookUtil;
		this.rowSelect = rowSelect;
		this.sxssfWorkBookList = sxssfWorkBookList;
		this.pageSize = pageSize;
	}
	
	public List getList(RowSelect rowSelect,
	        ISxssfWorkBookList sxssfWorkBookList) {
		if (sxssfWorkBookList != null) {
			return sxssfWorkBookList.doExecuteList(rowSelect);
		}
		return null;
		
	}
	
	public void run() {
		try {
			startCdl.await();
			if (logger.isDebugEnabled()) {
				logger.debug("run() - " + Thread.currentThread().getName()
				        + " has been working!!!!");
			}
			// 此处需要代码清单一的那些连接操作
// synchronized (sxssfWorkBookUtil) {
// sxssfWorkBookUtil.ex();
// }
// sxssfWorkBookUtil.excute(60000, new ISXSSFWorkBook() {
//				
// @Override
// public void doExecute(Row row) {
// for (int cellnum = 0; cellnum < 10; cellnum++) {
// Cell cell = row.createCell(cellnum);
// String address = new CellReference(cell)
// .formatAsString();
// cell.setCellValue(address);
// }
// }
//				
// });
			List list = getList(rowSelect, sxssfWorkBookList);
			if (list == null || list.isEmpty()) {
				return;
			}
			sxssfWorkBookUtil.excute(pageSize, sxssfWorkBookUtil
			        .getSxIsxssfWorkBook(), list);
			doneCdl.countDown();
		} catch (InterruptedException e) {
			logger.error("run()", e);
		} catch (IOException e) {
			// TODO Auto-generated catch block
			logger.error("run()", e);
		}
	}
}
